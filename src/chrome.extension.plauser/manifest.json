{
	"manifest_version": 2,
	"name": "Plauser",
	"description": "Adds a browser button that plays/pauses your Google Music.",
	"version": "0.2",
	"permissions": 
	[
		"tabs",
		"https://play.google.com/music/*"
	],
  	"icons": 
	{ 
		"48": "images/icon-plauser-48.png",
		"96": "images/icon-plauser-96.png",
		"128": "images/icon-plauser-128.png"
	},
	"background": 
	{
		"page": "background.html"
	},
	"browser_action": 
	{
		"default_icon": 
		{
			"19": "images/icon-plauser-19.png",
			"38": "images/icon-plauser-38.png"
		}
	}
}